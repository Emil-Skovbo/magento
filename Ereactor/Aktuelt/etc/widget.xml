<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:widget:Magento_Widget:etc/widget.xsd">
    <widget class="Ereactor\Aktuelt\Block\Widget\Posts" id="aktuelt_posts">
        <label>Blog Posts</label>
        <description>Posts</description>
        <parameters>
            <parameter name="posts" sort_order="10" visible="true" xsi:type="text">
                <label>Custom Posts Label</label>
            </parameter>
            <parameter name="contentnew" xsi:type="block" visible="true" required="true" sort_order="60" >
                <label>Custom Content</label>
                <block class="Ereactor\Aktuelt\Block\Widget\Editor" />
            </parameter>
            <parameter name="display_from" xsi:type="block" required="true" visible="true" sort_order="40">
                <label translate="true">Display from</label>
                <block class="Ereactor\Aktuelt\Block\Widget\Type\DatePicker">
                </block>
            </parameter>
            <parameter name="display_to" xsi:type="block" required="true" visible="true" sort_order="50">
                <label translate="true">Display to</label>
                <block class="Ereactor\Aktuelt\Block\Widget\Type\DatePicker">
                </block>
            </parameter>
        </parameters>
    </widget>
</widgets>
